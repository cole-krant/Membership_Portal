<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
    <header>
        <style>
            .riverbridge_bg {
                background-image: url('../../resources/img/River_Bridge.jpg');
                background-repeat: no-repeat;
                background-attachment: fixed;
                background-size: cover
            }
            .card_bg {
                background-image: url('../../resources/img/Mountain_Gradient');
                background-repeat: no-repeat;
                background-attachment: fixed;
                background-size: cover
            }
            h1 {
                font-size: x-large;
                color:#00014b;
                text-align: center;
            }
            h3 {
                font-size: x-large;
                color:#00014b;
                text-align: center;
            }
            p {
                font-size: normal;
                color:#00014b;
                text-align: center;
            }

            /* COMMUNITY CARD CSS */
            .card {
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
                max-width: 300px;
                margin: auto;
                text-align: center;
                font-family: arial;
            }
            
            .title {
                color: white;
                font-size: 18px;
            }
            
            button {
                border: none;
                outline: 0;
                display: inline-block;
                padding: 8px;
                color: white;
                background-color: #000;
                text-align: center;
                cursor: pointer;
                width: 100%;
                font-size: 18px;
            }
            
            a {
                text-decoration: none;
                font-size: 22px;
                color: black;
            }

            img {
                width:100%;
                max-width:424px;
            }
            
            button:hover, a:hover {
                opacity: 0.7;
            }
            .col-card {
                text-align: center;
                justify-content: center;
                align-content: center;
            }

            .divider {
                display: block;
                background-color: #00014b;
                color: #00014b;
            }

            .profile-card {
                background-color: #ffffff;
                padding-left: 2px;
                padding-top: 2px;
            }

            .pfc-red {
                background-color:rgb(104, 21, 0);
                color:rgb(255, 0, 0);
            }
        </style>
    </header>
    <body class="riverbridge_bg">

        <div class="row">

            <div class="card-group" style="padding:10px">
                <div class="card" style="background-color:rgb(104, 21, 0)">
                    <img src="data:image/png;base64,<%= imgHERE ? imgHERE : '../../resources/pfp/Default_Avatar.jpg' %>" alt="../../resources/pfp/Default_Avatar.jpg" class="card-img-top"></img>
                    <div class="card-body">
                    <h1 class="card-title" style="color:white"><strong><%= name %></strong>
                        <a href="<%= linkedin %>" style="color:rgb(255, 0, 0)">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16">
                        <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                      </svg></a></h1>

                    <div class="row">
                        <h5 style="color:white"><%= major ? major : 'Major Unkown' %></h5>
                    </div>
                    <div class="row" style="padding:10px">
                        <p style="color:white" class="card-text"><%= bio %></p>
                    </div>
                    <div class="row">
                        <h7 style="color:white"><%= profile[0].class ? profile[0].class : 'Class Unkown' %></h7>
                    </div>
                  </div>
                  <div class="card-footer">
                    <a href="/update_profile" style="font-size:small; color:white;">UPDATE PROFILE</a>
                  </div>
                </div>
              </div>

        </div>




        <!-- <section> USER INFO -->
            <div class="row">
                <div class="w3-container w3-padding-64 w3-center" id="user">
                    <div class="row"> 
                        <div class="col">
                            <div class="w3-quarter" style="padding-left: 10px;">
                                <div class="profile-card">
                                    <img alt="Upload a Profile Photo" src="data:image/png;base64,<%= imgHERE ? imgHERE : '../../resources/pfp/Default_Avatar.jpg' %>" alt="Default" style="width:80%" class="w3-circle w3-hover-opacity"></img>
                                    <h1><%= username ? username : 'Name Unknown' %></h1>
                                    <h3><%= major ? major : 'Major Unkown' %></h3>

                                    <div class="w3-container" style="color:blue">
                                        <a href="/update_profile">Update Profile</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <!-- </section> -->
    </body>
</main>

