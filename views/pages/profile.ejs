<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
    <header>
        <style>
            .riverbridge_bg {
                background-image: url('../../resources/img/River_Bridge.jpg');
                background-repeat: no-repeat;
                background-attachment: fixed;
                background-size: cover
            }
            .card_bg {
                background-image: url('../../resources/img/Mountain_Gradient');
                background-repeat: no-repeat;
                background-attachment: fixed;
                background-size: cover
            }
            /* h1 {
                font-size: x-large;
                color:#00014b;
                text-align: center;
            }
            h3 {
                font-size: x-large;
                color:#00014b;
                text-align: center;
            }
            p {
                font-size: normal;
                color:#00014b;
                text-align: center;
            } */

            /* COMMUNITY CARD CSS */
            .card {
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
                max-width: 300px;
                margin: auto;
                text-align: center;
                font-family: arial;
            }

            .hobbies-card {
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
                max-width: 700px;
                margin: auto;
                text-align: center;
                font-family: arial;
            }
            
            .title {
                color: white;
                font-size: 18px;
            }
            
            button {
                border: none;
                outline: 0;
                display: inline-block;
                padding: 8px;
                color: white;
                background-color: #000;
                text-align: center;
                cursor: pointer;
                width: 100%;
                font-size: 18px;
            }
            
            a {
                text-decoration: none;
                font-size: 22px;
                color: black;
            }

            img {
                width:100%;
                max-width:424px;
            }
            
            button:hover, a:hover {
                opacity: 0.7;
            }
            .col-card {
                text-align: center;
                justify-content: center;
                align-content: center;
            }

            .divider {
                display: block;
                background-color: #00014b;
                color: #00014b;
            }

            .pfc-red {
                background-color:rgb(104, 21, 0);
                color:rgb(255, 0, 0);
            }
        </style>
    </header>
    <body class="riverbridge_bg">

        <div class="row">

            <div class="col" style="column-width: 30%;">
                <div class="card-group" style="padding:10px">
                    <div class="card" style="background-color:#2B4B80">
                        <img src="<%= imgHERE ? 'data:image/png;base64,' + imgHERE : '../../resources/pfp/Default_Avatar.jpg' %>" alt="../../resources/pfp/Default_Avatar.jpg" class="card-img-top"></img>
                        <div class="card-body">
                        <h1 class="card-title" style="color:white; text-align: left;">
                            <strong><%= name %></strong>

                            <a  href="<%= spotify ? spotify : '' %>" style="color:#1ED760">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-spotify" viewBox="0 0 16 16">
                                <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.669 11.538a.498.498 0 0 1-.686.165c-1.879-1.147-4.243-1.407-7.028-.77a.499.499 0 0 1-.222-.973c3.048-.696 5.662-.397 7.77.892a.5.5 0 0 1 .166.686zm.979-2.178a.624.624 0 0 1-.858.205c-2.15-1.321-5.428-1.704-7.972-.932a.625.625 0 0 1-.362-1.194c2.905-.881 6.517-.454 8.986 1.063a.624.624 0 0 1 .206.858zm.084-2.268C10.154 5.56 5.9 5.419 3.438 6.166a.748.748 0 1 1-.434-1.432c2.825-.857 7.523-.692 10.492 1.07a.747.747 0 1 1-.764 1.288z"/>
                            </svg></a>


                            <a href="<%= linkedin ? linkedin : '' %>" style="color:#0077B5">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16">
                                <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                                </svg></a>

                        </h1>

                        <div class="row">
                            <h5 style="color:white; text-align: left;"><%= major ? major : '' %>, <%= profile[0].class ? profile[0].class : 'Class Unkown' %></h5>
                        </div>
                        <div class="row" style="text-align: left;">
                            <br>
                            <p style="color:white" class="card-text"><%= bio ? bio : '' %></p>
                            <br>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/update_profile" style="font-size:small; color:white;">UPDATE PROFILE</a>
                    </div>
                </div>




                <!-- HOBBIES CARD -->
                <div class="hobbies-card" style="background-color:#2B4B80">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="basic-info" data-bs-toggle="tab" data-bs-target="#basic-tab-pane" type="button" role="tab" aria-controls="basic-tab-pane" aria-selected="true">Basic Info</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Profile</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-tab-pane" type="button" role="tab" aria-controls="contact-tab-pane" aria-selected="false">Contact</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id=" bio-tab" data-bs-toggle="tab" data-bs-target="#bio-tab-pane" type="button" role="tab" aria-controls="bio-tab-pane" aria-selected="false">Bio</button>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <!-- BASIC INFO SELECTION -->
                        <div class="tab-pane fade show active" id="basic-tab-pane" role="tabpanel" aria-labelledby="basic-info" tabindex="0">
        
                            
        
                        </div>
                        <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
        

        
                        </div>
                        <div class="tab-pane fade" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">
                            

        
                        </div>
                        <div class="tab-pane fade" id="bio-tab-pane" role="tabpanel" aria-labelledby="bio-tab" tabindex="0">
        
        
                            
        
                        </div>
                    </div>
                </div>
            </div>





            <!-- HOBBIES  -->
            <div class="col" style="column-width: 70%;">
                
            </div>



        </div>

    </body>
</main>

<%- include ('../partials/footer') %>