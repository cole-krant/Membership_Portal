<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
    <header>
        <style>
            .user_bg {
                background-image: url('<%= profile[0].background %>');
                background-repeat: no-repeat;
                background-attachment: fixed;
                background-size: cover
            }


            .card_bg {
                background-image: url('../../resources/img/Mountain_Gradient');
                background-repeat: no-repeat;
                background-attachment: fixed;
                background-size: cover
            }

            /* COMMUNITY CARD CSS */
            .card {
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
                max-width: 300px;
                margin: auto;
                text-align: center;
                font-family: arial;
            }

            .hobbies-card {
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
                max-width: 700px;
                margin: auto;
                text-align: center;
                font-family: arial;
            }
            
            .title {
                color: white;
                font-size: 18px;
            }
            
            button {
                border: none;
                outline: 0;
                display: inline-block;
                padding: 8px;
                color: white;
                background-color: #000;
                text-align: center;
                cursor: pointer;
                width: 100%;
                font-size: 18px;
            }
            
            a {
                text-decoration: none;
                font-size: 22px;
                color: black;
            }

            img {
                width:100%;
                max-width:424px;
            }
            
            button:hover, a:hover {
                opacity: 0.7;
            }

            .divider {
                display: block;
                background-color: #00014b;
                color: #00014b;
            }

        </style>
    </header>
    <body class="user_bg">

        <div class="container" style="max-width:100%">
            <div class="row">

                <!-- PERSON CARD -->
                <div class="col" style="max-width:100%">
                    <div class="card-group" style="padding: 5px;">
                        <div class="card" style="background-color:#2B4B80; max-width: 70%;">
                            <img src="<%= profile[0].pfp_img ? 'data:image/png;base64,' + profile[0].pfp_img : '../../resources/pfp/Default_Avatar.jpg' %>" class="card-img-top"></img>
                            <div class="card-body">
                            <h1 class="card-title" style="color:white; text-align: left;">
                                <strong><%= profile[0].name %></strong>
                            </h1>
    
                            <div class="row">
                                <h3 style="color:white; text-align: left;"><%= profile[0].major ? profile[0].major + ', ' : '' %><%= profile[0].class ? profile[0].class : '' %></h3>
                            </div>
                            <div class="row" style="text-align: left;">
                                <br>
                                <p style="color:white" class="card-text"><%= profile[0].bio ? profile[0].bio : '' %></p>
                                <br>
                            </div>
                            <div class="card-footer">

                                <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#exampleModal"  style="color:#96b1dd">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-person-badge-fill" viewBox="0 0 16 16">
                                        <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm4.5 0a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1h-3zM8 11a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm5 2.755C12.146 12.825 10.623 12 8 12s-4.146.826-5 1.755V14a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1v-.245z"/>
                                    </svg>
                                </button>


                            </div>
                        </div>
                    </div>
                </div>
                
            </div>

            <!-- PREFERENCES CARD -->
            <div class="col" style="max-width:80%">

                <div class="card-group" style="padding: 5px;">
                    <div class="card" style="background-color:#2B4B80; max-width:100%;">
                        <div class="card-body">
                            <div class="row">
                                <div class="col" style="background-color:#113979">
                                    <img src="<%= profile[0].fav_interview_img ? 'data:image/png;base64,' + profile[0].fav_interview_img : '../../resources/pfp/Default_Avatar.jpg' %>" class="w3-circle" style="max-width:50%;""></img>
                                    <h4 style="color:white; text-align: center;">Favorite Brother Interview</h4>
                                    <h6 style="color:white; text-align: center;"><%= profile[0].fav_interview_brother ? profile[0].fav_interview_brother : '' %></h6>
                                    <p style="color:white; text-align: center;" class="card-text"><%= profile[0].fav_interview_caption ? profile[0].fav_interview_caption : '' %></p>
                                </div>
                                <div class="col">
                                    <div class="row">

                                        <div class="col" style="background-color:rgb(101, 168, 101)">
                                            <h1 style="color:black;">Likes</h1>
                                            <p style="color:black;"><%= profile[0].likes %></p>
                                        </div>
                                        <div class="col" style="background-color:rgb(214, 142, 142)">
                                            <h1 style="color:black;">Dislikes</h1>
                                            <p style="color:black;"><%= profile[0].dislikes %></p>
                                        </div>
                                    </div>
                                    <div class="row" style="background-color:gold">

                                        <h1 style="color:black;">Aspirations</h1>
                                        <p style="color:black;"><%= profile[0].aspirations %></p>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- HOBBIES CAROUSEL -->
            <div class="col" style="max-width:60%">
                <div class="card-group" style="padding: 10px;">
                    <div class="card" style="background-color:#2B4B80;  max-width: 400px; max-height: 800px; position: fixed;">
                        
                        <div id="carouselExampleIndicators" class="carousel slide">
                            <div class="carousel-indicators">
                              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            </div>
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img src="<%= profile[0].h1_img ? 'data:image/png;base64,' + profile[0].h1_img : '../../resources/img/Maroon_Bells.jpg' %>" class="d-block w-100" alt="..." style="max-width: 400px; max-height: 500px;">
                                <h3 style="color:white"><%= profile[0].hobby1 ? profile[0].hobby1 : 'Activity 1' %></h3>
                                <p style="color:white"><%= profile[0].h1_caption ? profile[0].h1_caption : 'Caption for Activity one.' %></p>
                                <br>
                              </div>
                              <div class="carousel-item">
                                <img src="<%= profile[0].h2_img ? 'data:image/png;base64,' + profile[0].h2_img : '../../resources/img/Inspiring_Sunset.jpeg' %>" class="d-block w-100" alt="..." style="max-width: 400px; max-height: 500px; size-adjust:inherit">
                                <h3 style="color:white"><%= profile[0].hobby2 ? profile[0].hobby2 : 'Activity 1' %></h3>
                                <p style="color:white"><%= profile[0].h2_caption ? profile[0].h2_caption : 'Caption for Activity one.' %></p>
                                <br>
                              </div>
                              <div class="carousel-item">
                                <img src="<%= profile[0].h3_img ? 'data:image/png;base64,' + profile[0].h3_img : '../../resources/img/Mountains_4k.jpg' %>" class="d-block w-100" alt="..." style="max-width: 400px; max-height: 500px;">
                                <h3 style="color:white"><%= profile[0].hobby3 ? profile[0].hobby3 : 'Activity 1' %></h3>
                                <p style="color:white"><%= profile[0].h3_caption ? profile[0].h3_caption : 'Caption for Activity one.' %></p>
                                <br>
                              </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Next</span>
                            </button>
                          </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


            


        <!-- CONTACT INFO MODAL -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel" style="color:#000"><strong>Contact Information</strong>
                    <% if(profile[0].linkedin != null)  { %>
                        <a href="<%= profile[0].linkedin ? profile[0].linkedin : '' %>" style="color:#0077B5">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16">
                            <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                            </svg></a>
                    <% } %>
                
                    </h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <% if(profile[0].phone != null) { %>
                        <h7><strong>Phone Number:</strong>   <%= profile[0].phone  %></h7>
                        <br>
                    <% } %>
                    <% if(profile[0].school_email != null) { %>
                        <h7><strong>School Email:</strong>   <%= profile[0].school_email  %></h7>
                        <br>
                    <% } %>
                    <% if(profile[0].personal_email != null) { %>
                        <h7><strong>Personal Email:</strong>   <%= profile[0].personal_email  %></h7>
                        <br>
                    <% } %>
                    <% if(profile[0].professional_email != null) { %>
                        <h7><strong>Professional Email:</strong>   <%= profile[0].personal_email  %></h7>
                        <br>
                    <% } %>

                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>

    </body>
</main>

